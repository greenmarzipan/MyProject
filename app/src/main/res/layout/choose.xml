<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chooseLinearLayout"
        android:background="@drawable/road">



        <LinearLayout
            android:id="@+id/chooseCharacter"
            android:layout_width="200dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/laura4"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>



        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="26dp">

            <TextView
                android:layout_width="170dp"
                android:layout_height="25dp"
                android:layout_marginTop="330dp"
                android:background="#DFDBD4"
                android:elevation="6dp"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Лаура"
                android:id="@+id/ChooseNameTextview" />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:background="#DFDBD4"
                android:elevation="6dp"
                android:padding="8dp"
                android:id="@+id/ChooseTextview"
                android:textSize="18dp"
                android:text="..."
                android:textColor="@color/black"/>
            <Button
                android:layout_width="190dp"
                android:layout_marginTop="30dp"
                android:text="..."
                android:elevation="6dp"
                android:padding="4dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/ChooseOneButton"
                android:background="#DFDBD4"/>
            <Button
                android:layout_width="190dp"
                android:layout_marginTop="15dp"
                android:text="..."
                android:padding="4dp"
                android:textColor="@color/black"
                android:elevation="6dp"
                android:layout_height="wrap_content"
                android:id="@+id/ChooseTwoButton"
                android:background="#DFDBD4"/>
            <Button
                android:layout_width="190dp"
                android:layout_marginTop="15dp"
                android:text="..."
                android:elevation="6dp"
                android:padding="4dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/ChooseThreeButton"
                android:background="#DFDBD4"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>